<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#373737"
    tools:context=".vista.audio.AudioFragment">


    <Chronometer
        android:id="@+id/cronometroAudio"
        android:layout_width="310dp"
        android:layout_height="142dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="460dp"
        android:gravity="center_horizontal"
        android:textColor="#f00"
        android:textSize="64sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="312dp"
        android:layout_height="400dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="55dp"
        android:contentDescription="@string/fondo"
        android:src="@drawable/microfono"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/microfono" />

    <Button
        android:id="@+id/botonGrabarAudio"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="373dp"
        android:layout_marginEnd="272dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/boton_rec"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/botonPararGrabacionAudio"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="290dp"
        android:layout_marginTop="428dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="94dp"
        android:background="@drawable/boton_no_audio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>