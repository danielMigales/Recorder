<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.audio.AudioFragment">


    <Chronometer
        android:id="@+id/cronometroAudio"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="568dp"
        android:gravity="center_horizontal"
        android:textColor="#f00"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonPararGrabacionAudio"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="219dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="493dp"
        android:drawableBottom="@drawable/twotone_mic_off_black_18dp"
        android:text="@string/parar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonGrabarAudio"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="217dp"
        android:layout_marginBottom="493dp"
        android:drawableBottom="@drawable/twotone_mic_none_black_18dp"
        android:text="@string/grabar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>